# AI Avatar Environment Configuration Template
# Copy this file to .env and update with your actual values

# Azure Speech Services Configuration
AZURE_SPEECH_KEY=your_speech_service_key_here
AZURE_SPEECH_REGION=eastus2
AZURE_SPEECH_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# Azure OpenAI Configuration  
AZURE_OPENAI_ENDPOINT=https://dgopenai2211200906498164.openai.azure.com/
AZURE_OPENAI_KEY=your_openai_key_here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_GPT4O_DEPLOYMENT=gpt-4o
AZURE_OPENAI_O3_MINI_DEPLOYMENT=o3-mini

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string_here

# Azure Resource Configuration (for deployment)
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_RESOURCE_GROUP=rg-aiavatar
AZURE_ENV_NAME=ai-avatar-dev
AZURE_LOCATION=eastus2

# Avatar Configuration Defaults
AVATAR_CHARACTER=lisa
AVATAR_STYLE=graceful-sitting
AVATAR_BACKGROUND_COLOR=#FFFFFFFF
TTS_VOICE=en-US-JennyNeural
TTS_RATE=0
TTS_PITCH=0

# Flask Application Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5000
