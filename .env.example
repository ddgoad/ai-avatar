# Azure AI Services Configuration
# Get these values from your Azure Speech Services resource
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_RESOURCE_GROUP=your-resource-group-here

# Azure Speech Services Configuration
# Required: Get these from your Azure Speech Services resource
AZURE_SPEECH_KEY=your-speech-services-key-here
AZURE_SPEECH_REGION=your-speech-region-here
AZURE_SPEECH_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# AI Avatar Configuration
# Avatar character: lisa, anna, mike, etc.
AVATAR_CHARACTER=lisa
# Avatar style: graceful-sitting, standing, casual-sitting, etc.
AVATAR_STYLE=graceful-sitting
# Background color in hex format (with alpha)
AVATAR_BACKGROUND_COLOR=#FFFFFFFF
# TTS voice to use (e.g., en-US-JennyNeural, en-US-AriaNeural)
TTS_VOICE=en-US-JennyNeural
# Speech rate adjustment (-50 to 100)
TTS_RATE=0
# Speech pitch adjustment (-50 to 50)
TTS_PITCH=0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5000
